@startuml
skinparam defaultTextAlignment left
caption Behavior of thing Pump
[*] --> Pump
state Pump{
state OFF_2{
	OFF_2 : entry / switch(DigitalState : LOW)\n

OFF_2 --> ON_2 : notify?pump_ON
}
state ON_2{
	ON_2 : entry / switch(DigitalState : HIGH)\n

ON_2 --> OFF_2 : notify?pump_OFF
}
[*] --> OFF_2
}
@enduml
